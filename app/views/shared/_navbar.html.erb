
<% if params[:controller] = "pages" && params[:action] == "home" %>
<div class="navbar-wagon navbar-wagon-fixed">
<% else %>
<div class="navbar-wagon-dark navbar-wagon-fixed">
<% end %>
  <!-- Logo -->
  <div class= "navbar-wagon-brand">
    <h1><%= link_to "SR", root_path, class: 'navbar-wagon-brand'%></h1>
  </div>
  <!-- FIX ME when clicking on SR: video does not reload on main page -->
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Text link -->
    <%= link_to "Over mij", about_path, class: 'navbar-wagon-item navbar-wagon-link'%>

    <!-- Text link -->
    <%= link_to "Ervaring", experience_path, class: 'navbar-wagon-item navbar-wagon-link'%>

